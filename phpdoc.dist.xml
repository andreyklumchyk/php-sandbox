<?xml version="1.0" encoding="UTF-8" ?>
<phpdocumentor
        configVersion="3"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="https://www.phpdoc.org"
        xsi:noNamespaceSchemaLocation="data/xsd/phpdoc.xsd"
>
    <title>Chat PHP Documentation</title>
    <paths>
        <output>build/artifacts/rootfs/docs</output>
        <cache>.cache/phpdoc/</cache>
    </paths>
    <version number="3.0.0">
        <folder>latest</folder>
        <api>
            <source dsn=".">
                <path>src</path>
            </source>
            <ignore hidden="true" symlinks="true">
                <path>_tests/**/*</path>
                <path>_build/**/*</path>
                <path>_dev/**/*</path>
                <path>_docker/**/*</path>
                <path>templates/**/*</path>
                <path>vendor/**/*</path>
            </ignore>
            <extensions>
                <extension>php</extension>
            </extensions>
            <default-package-name>Chat</default-package-name>
        </api>
    </version>
</phpdocumentor>
